<% title 'Organization Information' %>

<% content_for :sidebar do -%>
  <p>
  For which entity is this application being made? This is the information
  displayed when logged in or associated with posted information (only
  official and releasable information should be used, do not use personal
  information). Preferably, an access code is provided to a
  group/department/section, and less often to an individual.
  </p>
<% end -%>

<%= render partial: 'steps' %>

<%= simple_form_for @organization, url: next_step_path, method: :put do |f| %>
  <%= f.input :name, label: 'Organization Name' %>

  <%= f.input :department %>

  <%= f.input :division %>

  <%= f.input :sub_division, label: 'Sub Division' %>

  <%= f.input :address_line_1, label: 'Address Line 1' %>

  <%= f.input :address_line_2, label: 'Address Line 2' %>

  <%= f.input :city, label: 'City' %>

  <%= f.input :state, label: 'State/Prov' %>

  <%= f.input :country, label: 'Country', as: :string %>

  <%= f.input :postal_code, label: 'Postal code' %>

  <%= f.input :telephone %>

  <%= f.input :website %>

  <div class="form-actions">
    <%= link_to 'Previous', previous_step_path(@organization), class: 'btn'  %>
    <%= f.button :submit, 'Next', class: 'btn-primary' %>
  </div>
<% end %>
