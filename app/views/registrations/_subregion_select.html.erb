<div id="state_wrapper">
  <div class="control-group state optional organization_state">
    <label class="string optional control-label" for="organization_state">State/Prov</label>
    <div class="controls">
      <% parent_region ||= params[:parent_region] %>
      <% country = Carmen::Country.coded(parent_region) %>

      <% if country.nil? %>
        <em>Please select a country above</em>
      <% elsif country.subregions? %>
        <%= subregion_select(:organization, :state, parent_region) %>
      <% else %>
        <%= text_field(:organization, :state) %>
      <% end %>
    </div>
  </div>
</div>
