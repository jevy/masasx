<% title 'Step 4 - Secondary Contact Information' %>

<% content_for :sidebar do -%>
  <p>
  Please provide contact details for a Secondary Contact person (if needed,
  this section is optional). This contact information will be kept on file for
  administrative purposes, but does not have to be viewable by other users.
  </p>
<% end -%>

<%= render partial: 'steps' %>

<%= simple_form_for @organization, url: next_step_path, method: :put do |f| %>

  <%= f.fields_for :secondary_organization_administrator do |administrator| %>

    <%= administrator.fields_for :contact_info do |contact| %>

      <%= contact.input :name, label: 'Name' %>

      <%= contact.input :title, label: 'Title' %>

      <%= contact.input :language, label: 'Language', collection: Language.all %>

      <%= administrator.input :email, label: 'Office e-mail' %>

      <%= contact.input :mobile_email, label: 'Mobile e-mail' %>

      <%= contact.input :office_phone, label: 'Office Phone' %>

      <%= contact.input :mobile_phone, label: 'Mobile Phone' %>

    <% end %>

  <% end %>

  <div class="form-actions">
    <%= link_to 'Previous', previous_step_path(@organization), class: 'btn'  %>
    <%= f.button :submit, 'Next', class: 'btn-primary' %>
  </div>
<% end %>
