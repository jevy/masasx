<div id="state_wrapper">
  <div class="control-group state optional secondary_contact_state">
    <label class="string optional control-label" for="secondary_organization_administrator_state">State/Prov</label>
    <div class="controls">
      <% secondary_organization_administrator ||= :secondary_organization_administrator %>
      <% country ||= params[:country] %>
      <% country = Carmen::Country.coded(country) %>

      <% if country.nil? %>
        <em>Please select a country above</em>
      <% elsif country.subregions? %>
        <%= subregion_select(secondary_organization_administrator, :state, country, {}, {:name => 'organization[secondary_organization_administrator_attributes][state]'} ) %>
      <% else %>
        <%= text_field(secondary_organization_administrator, :state, :name => 'organization[secondary_organization_administrator_attributes][state]') %>
      <% end %>
    </div>
  </div>
</div>
