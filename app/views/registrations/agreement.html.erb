<% title 'Agreements' %>

<% content_for :sidebar do -%>
  <p>In order to complete your request for access, your agency must agree to the following.</p>
<% end -%>

<%= render partial: 'steps' %>

<%= simple_form_for @organization, url: next_step_path(@organization), method: :put do |f| %>

  <%= f.input :agreements, collection: Agreement.all, as: :check_boxes %>

  <div class="form-actions">
    <%= link_to 'Cancel', root_path, class: 'btn' %>
    <%= f.button :submit, 'Next', class: 'btn-primary' %>
  </div>
<% end %>
