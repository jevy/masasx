<% title 'Agreement' %>

<% content_for :sidebar do -%>
  <p>To proceed with your application please review and agree to following:</p>
<% end -%>

<%= render partial: 'steps' %>

<%= simple_form_for @organization, url: next_step_path(@organization), method: :put do |f| %>

  <%= f.input :agreements, collection: Agreement.all, as: :check_boxes %>

  <p> Click <%= link_to 'here', 'http://www.masas-x.ca/images/MASAS-X_Participant_Agreement.pdf' %> to view the agreement</p>

  <div class="form-actions">
    <%= link_to 'Cancel', root_path, class: 'btn' %>
    <%= f.button :submit, 'Next', class: 'btn-primary' %>
  </div>
<% end %>
