<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for organization in organizations %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.status %></td>
        <td>
          <div class="btn-toolbar">
            <%= link_to 'View', [:admin, organization], class: 'btn' %>
            <%= link_to 'View Organization Page', "https://iam.continuumloop.com/osm/?uuid=#{organization.uuid}", class: 'btn', target: '_blank' if organization.approved? %>
            <%= link_to 'Delete', [:admin, organization], class: 'btn btn-danger', method: "delete", data: {confirm: "Are you sure?"} if organization.rejected? %>
          </div>
        </td>
      </tr>
    <% end -%>
  </tbody>
</table>
